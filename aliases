# Unix
alias vi="vim"
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"

# git
alias gco="git checkout"
alias gcm="git commit -m"
alias gca="git commit -am"

# Ruby
alias help-strftime='ruby ~/bin/help-strftime.rb'

# Bundler
alias b="bundle"
alias be="bundle exec"
alias bake="bundle exec rake"
alias s="bundle exec rspec"
alias cuc="bundle exec cucumber"

# Rubygems
alias gi="gem install"
alias giv="gem install -v"

# Rails
alias migrate="bundle exec rake db:migrate db:test:prepare"
alias seed="bundle exec rake db:seed"
alias remigrate="bundle exec rake db:migrate db:migrate:redo db:schema:dump db:test:prepare"
alias remongrate="bundle exec rake mongoid:migrate mongoid:migrate:redo"

# Python
alias pm="python manage.py"
alias pms="python manage.py shell"
alias pmrs="python manage.py runserver"
alias pmsa="python manage.py startapp"
alias pmsp="python manage.py startproject"
alias pmsdb="python manage.py syncdb"
alias pmmm="python manage.py makemigrations"
alias pmsm="python manage.py sqlmigrate"
alias pmm="python manage.py migrate"

# SSH
