# Unix
alias vi="vim"
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls --color=auto'
alias ll='ls -al --color=auto'
alias lh='ls -Alh --color=auto'
alias -g G='| grep --color=auto'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"

# Django
alias pm="python manage.py"
alias pms="python manage.py shell"
alias pmrs="python manage.py runserver"
alias pmsa="python manage.py startapp"
alias pmsp="python manage.py startproject"
alias pmsdb="python manage.py syncdb"
alias pmmm="python manage.py makemigrations"
alias pmsm="python manage.py sqlmigrate"
alias pmm="python manage.py migrate"

alias chrome="open /Applications/Google\ Chrome.app/"

# ssh
alias sshcmp="ssh ubuntu@cmp-local"
alias sshcur="ssh falcon@curata-local"

# curata
alias hivestart=./hiveproject/manage.py runserver 0.0.0.0:8000

# docker
#alias dockerclean="docker rmi $(docker images | grep '^<none>' | awk '{print $3}')"

# vpn
alias govpn="sudo openvpn ~/.ssh/client.ovpn"

