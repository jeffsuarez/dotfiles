# Unix
alias vi="vim"
alias tlf="tail -f"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"

# git
alias gco="git checkout"
alias gcm="git commit -m"
alias gca="git commit -am"

# Ruby
alias help-strftime='ruby ~/bin/help-strftime.rb'
alias tags="ctags --exclude='*.js' -f /Users/jayrowe/Sites/gokamea/tmp/tags -R --langmap='ruby:+.rake.builder.rjs' --languages=-javascript /Users/jayrowe/Sites/gokamea"

# Bundler
alias b="bundle"
alias be="bundle exec"
alias bake="bundle exec rake"
alias s="bundle exec rspec"
alias cuc="bundle exec cucumber"

# Rubygems
alias gi="gem install"
alias giv="gem install -v"

# Rails
alias migrate="bundle exec rake db:migrate db:test:prepare"
alias seed="bundle exec rake db:seed"
alias remigrate="bundle exec rake db:migrate db:migrate:redo db:schema:dump db:test:prepare"
alias remongrate="bundle exec rake mongoid:migrate mongoid:migrate:redo"

alias sshapp1='ssh -l deploy app01.c45739.blueboxgrid.com'
alias sshapp2='ssh -l deploy app02.c45739.blueboxgrid.com'
alias sshdb1='ssh -l deploy ds922.blueboxgrid.com'
alias sshdb2='ssh -l deploy ds931.blueboxgrid.com'
alias sshstg='ssh -l deploy stage01.c45739.blueboxgrid.com'

alias rails-clean-log='rails s | grep -v asset | grep -v remember_token | grep -v Rendered | grep -e .'

alias chrome="open /Applications/Google\ Chrome.app/"
